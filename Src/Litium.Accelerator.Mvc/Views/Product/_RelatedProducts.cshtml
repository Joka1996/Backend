@model KeyValuePair<Litium.Products.RelationshipType, List<Litium.Accelerator.ViewModels.Product.ProductItemViewModel>>

@if (Model.Value != null && Model.Value.Any())
{
<div class="row">
    <div class="small-12 columns">
        <h2 class="product-detail__header-title">@Model.Key.Localizations.CurrentCulture.Name</h2>
        <ul class="row">
            @foreach (var product in Model.Value)
            {
                <li class="columns small-6 medium-4 large-3 product__container">@Html.DisplayFor(x => product, new {maxWidth = 371})</li>
            }
        </ul>
    </div>
</div>
}